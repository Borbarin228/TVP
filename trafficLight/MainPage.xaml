<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="trafficLight.MainPage">
    <VerticalStackLayout>
        <HorizontalStackLayout>
        
        <Grid x:Name="lights" BackgroundColor="DarkGrey" WidthRequest="200" RowSpacing="10">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = " 200"/>
            </Grid.ColumnDefinitions >
        </Grid>
        <Grid x:Name="walker" BackgroundColor="DarkGrey" WidthRequest="200" RowSpacing="10" Margin="20">
            <Grid.RowDefinitions >
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width = " 200"/>
            </Grid.ColumnDefinitions >
        </Grid>
            <Label 

                    
                TextColor="White"
                Text="{Binding timer}"
                />
        </HorizontalStackLayout>
    </VerticalStackLayout>

</ContentPage>
